{# src/Zeega/EditorBundle/Resources/views/Editor/index.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}Zeega Alpha{% endblock %}

{% block body %}
	<div id="projects">
			<br>
			<div id="welcome" style="font-size: 24px; color: #65cafc; float: left; ">Welcome to Zeega, {{displayname}}!</div>
			<div class="clear" style="clear: both;"></div>

			<div id="intro-actions" style="margin-top:35px;">
				<div id="surf-text" style="font-size: 18px; color: #65cafc; float: left; width: 200px;">
				Surf & Collect<br>
				<span class="intro-actions-text" style="font-size: 12px; color: #6c6c6c; line-height: .5;">Add images, videos, sounds and more from <a href="{{ path('ZeegaEditorBundle_faq')}}">these websites</a> to Zeega with our bookmarklet plugin.</span>
				<br><br>
				<ul class="pill-buttons">
					<li class='item add-media' ><a href="#" style="font-size: 12px;">Add Zeega Bookmarklet</a></li>							
				</ul>
				</div>
				<div id="surf-image" style="float: left; margin-left: 20px;"><img src="{{ asset('gamma/images/surf-graphic.gif') }}" /></div>
				
				<div id="collect-text" style="font-size: 18px; color: #65cafc; float: left; width: 200px; margin-left: 45px;">
				Curate & Annotate<br>
				<span class="intro-actions-text" style="font-size: 12px; color: #6c6c6c; line-height: .5;">Organize and annotate your media in collections.</span>
				<br><br><br>
				<ul class="pill-buttons">
					<li><a  href="{{ path('ZeegaEditorBundle_browser', { 'short': short })}}" style="font-size: 12px;">Browse & Create Collections</a></li>
				</ul>
				</div>
				<div id="collect-image" style="float: left; margin-left: 20px;"><img src="{{ asset('gamma/images/collect-graphic.gif') }}" /></div>
				
				<div id="edit-text" style="font-size: 18px; color: #65cafc; float: left; width: 200px; margin-left: 45px;">
				Edit & Publish<br>
				<span class="intro-actions-text" style="font-size: 12px; color: #6c6c6c; line-height: .5;">Use media collected to create your own interactive project.</span>
				<br><br><br>
				<ul class="pill-buttons">
					<li><a class="new-project" href="#" style="font-size: 12px;">Create New Project</a></li>
				</ul>
				</div>
				<div id="edit-image" style="float: left; margin-left: 0px;"><img src="{{ asset('gamma/images/edit-graphic.gif') }}" /></div>


			
			<div class="clear" style="clear: both;"></div>
			</div><!--#intro-actions-->
			
			
			{% if myprojects[0] is defined %}
			<div id="projects-lists" style="margin-top: 50px;">
				<div id='my-projects' class="item-title projects" style="font-size: 16px; color:white; ">My Projects</div> {% if is_granted('ROLE_ADMIN') %} <div id='all-projects' class="item-title projects" style="font-size: 16px;color:white; opacity:0.6; cursor:pointer; margin-left: 15px;">All Projects</div>{% endif %}	<br><br>
				<div id="my-projects-container" class="projects-container my-projects-container" style="margin-left:-27px;">
					<ul>
						{% for project in myprojects %}
							<li class='project-{{project.id}}' style="margin-bottom: 5px; padding: 5px; background-color: #444; border-radius: 3px;"><a href="{{ path('ZeegaEditorBundle_editor', { 'id': project.id,'short': playground.short }) }}" class="white">{{project.title}}</a> <span class="timeStamp"></span> <a class='project-delete' style="color:red; float: right;" data-id="{{project.id}}" href="#">delete</a></li><div style="clear: both;"></div>
						{% endfor %}
					</ul>
				</div>
		{% endif %}	
		{% if is_granted('ROLE_ADMIN') %}

				<!--<div class="item-title" style="font-size: 16px; ">All Recently Updated Projects in {{playground.title}}</div> <br><br>
				-->
				<div id="all-projects-container" class="projects-container all-projects-container" style="padding-left:5px; display:none; margin-left:-32px;">
					<ul>
						{% for project in allprojects %}
							<li class='project-{{project.id}}'  style="margin-bottom: 5px; padding: 5px; background-color: #444; border-radius: 3px;"><a target="_blank" href="{{hostname}}{{directory}}project/{{project.id}}/view">{{project.title}}</a> <span class="timeStamp"> </li><div style="clear: both;"></div>
						{% endfor %}
					</ul>
				</div>
			</div> <!--#projects-list-->
		
	{% endif %}	
</div><br>	<!--#projects-->

{% endblock %}	
{% block scripts %}
      <script data-main="{{ asset('gamma/js/main.playground.js') }}" src="{{ asset('gamma/js/libraries/require-jquery.js')}}"></script>
      <script> 
			sessionStorage.setItem('playgroundShort', '{{playground.short}}');
			sessionStorage.setItem('playgroundId','{{playground.id}}');
		</script>
{% endblock %}
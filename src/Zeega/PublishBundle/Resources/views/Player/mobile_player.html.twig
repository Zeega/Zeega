<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <meta name="apple-mobile-web-app-capable" content="yes" />
        <!-- standard viewport tag to set the viewport to the device's width
            , Android 2.3 devices need this so 100% width works properly and
            doesn't allow children to blow up the viewport width-->
        <meta name="viewport" id="vp" content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width" />
        <!-- width=device-width causes the iPhone 5 to letterbox the app, so
            we want to exclude it for iPhone 5 to allow full screen apps -->
        <meta name="viewport" id="vp" content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)" />
        <!-- provide the splash screens for iPhone 5 and previous -->
        <link href="assets/splashs/splash_1096.png" rel="apple-touch-startup-image" media="(device-height: 568px)">
        <link href="assets/splashs/splash_iphone_2x.png" rel="apple-touch-startup-image" sizes="640x960" media="(device-height: 480px)">

        {% if project.thumbnailUrl is defined and project.thumbnailUrl is not empty %}
            {% set thumbnailUrl = project.thumbnailUrl %}
        {% elseif project.coverImage is defined and project.coverImage is not empty %}
            {% set thumbnailUrl = project.coverImage %}
        {% else %}
            {% set thumbnailUrl = "http://zeega.com/images/default_cover.png" %}
        {% endif %}

        <title>{{project.title}}</title>
        <link rel="shortcut icon" type="image/x-icon" href="{{asset('images/zeega.ico')}}"> 
        <meta name="description" content="{{project.description}}">
        <meta name="author" content="{{project.user.displayName}}">

        <!-- FB -->
        
        <meta property="og:site_name" content="Zeega"/>
        <meta property="og:title" content="{{project.title}}"/>
        <meta property="og:description" content="{{project.description}}"/>
        <meta property="og:type" content="movie"/>
        <meta property="og:url" content="http:{{hostname}}{{directory}}{{project.id}}"/>
        <meta property="og:image" content="{{thumbnailUrl}}"/>
            
        <!-- END FB --> 


        <!-- Twitter -->

        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@zeega">
        {% if project.title == "" %}
        <meta name="twitter:title" content="">
        {% else %}
        <meta name="twitter:title" content="A Zeega by {{project.user.displayName}} &#9658; {{project.title}}">
        {% endif %}
        <meta name="twitter:description" content="Zeegas are a new format of interactive media, enabling anyone to easily combine animated GIFs, audio, images, text and video from across the web. Make the web you want.">
        <meta name="twitter:creator" content="">
        <meta name="twitter:image:src" content="{{thumbnailUrl}}">
        <meta name="twitter:domain" content="zeega.com">

        <!-- End Twitter -->


        <meta name="zeega" content="zeega-mobile"
            data-directory="{{directory}}"
            data-hostname="{{hostname}}"
            data-project-id="{{project.id}}"
            data-user-thumbnail="{{project.user.thumbUrl}}"
            data-user-id="{{project.user.id}}"
            data-views="{{project.views}}"
        />

        

        {% block player_stylesheets %}

        <base href="/js/app/player.mobile/">

        {% if app.environment == 'prod' %}

        <link rel="stylesheet" type="text/css" href="{{ asset('js/app/player.mobile/dist/release/index.css') }}">
        
        {% else %}

        <link rel="stylesheet" type="text/css" href="{{ asset('js/app/player.mobile/dist/debug/index.css') }}">

        {% endif %}

        {% endblock player_stylesheets %}

        <script> 
            // because windows is the worst
            if (!window.console) console = { log: function() {}};
             //Project data
            var projectJSON = "{{ project_data|e('js') }}";
            var relatedProjectsJSON = "{{ related_projects_data|e('js') }}";
        </script>

        {% if app.environment == 'prod' %}

        <script>
            //Google analytics
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-37456730-1']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
            
           
        </script>
        {% endif %}

        {% block player_scripts %}

        {% if app.environment == 'prod' %}

        <script src="{{ asset('js/app/player.mobile/dist/release/require.js') }}" ></script>
        
        {% else %}

        <script src="{{ asset('js/app/player.mobile/dist/debug/require.js') }}" ></script>

        {% endif %}

        {% endblock player_scripts %}

    </head>

    <body>
        <div role="main" id="main"></div>
        {% include '::eventlogger.base.html.twig' %}
    </body>
</html>

<!doctype html>
<html>
	<head>
		<style type="text/css">
			html {
				{% if project.getCoverImage() is defined %}
				background: url({{project.getCoverImage()}}) no-repeat center center fixed;
				{% else %}
				background: url({{asset('images/default_cover.png')}}) no-repeat center center fixed;
				{% endif %}
				
				-webkit-background-size: cover;
				-moz-background-size: cover;
				-o-background-size: cover;
				background-size: cover;
				color:white;
			}
			
			h1 {
				font-size:14px;
			}
			
			h2 {
				font-size:12px;
			}
			
			
				#text{
			
				width:100%;
				background-color:rgba(0,0,0,.5); 
				position: absolute; 
				bottom: 10%; 
				padding-top:10px;
				padding-bottom:10px;
				
			}
			
			a{
				width:100%;
				height:100%; 
				z-index:1000; 
				position:absolute;
				background:url({{ asset('images/embed_play.png')}}) center center no-repeat;
				background-size:80px 60px;
			
			}
			
			
			
		</style>
			<script> 
				sessionStorage.setItem('directory', '{{directory}}');
				sessionStorage.setItem('hostname','{{hostname}}');
				sessionStorage.setItem('projectId','{{projectId}}');
			
		</script>
	
	</head>

	<body style="margin:0px;">
		<a href="{{hostname}}{{directory}}project/{{projectId}}/view" target= "_blank"></a>
		<div id="text">
			<h1>{{project.getTitle()}}</h1>
			{% if project.getAuthor() is defined %}<h2>{{project.getAuthor() }}</h2>{% endif %}
		</div>
	</body>
</html>

				<h2 class='message'>Forgot your password? It's ok.</h2>
				<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-vertical">
				    <div>
				        {% if invalid_username is defined %}
				            <h2 style="color:yellow">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</h2>
				        {% endif %}
				        <h4>Email Address</h4>
				        <div class="controls" style="margin-bottom:0">
				        	<input type="text" id="username" name="username" class="input-xlarge" style='width:100%'/>
				    	</div>
				    </div>
				    <div>
				    	<button type="submit" class="btn btn-success btn-custom" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}"><h4>Submit</h4></button>

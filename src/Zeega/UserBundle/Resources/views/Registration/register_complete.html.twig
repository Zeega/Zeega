<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>Zeega</title>
    <meta name="zeega" content="zeega-home"
        data-directory="{{directory}}"
        data-hostname="{{hostname}}"
        data-api= "http:{{hostname}}{{directory}}api/"
        data-root= "{{directory}}"
        data-path="{{directory}}"
    />
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/zeega.ico') }}"> 
    
        <!-- Application styles. -->
    {% if app.environment == 'prod' %}
        <link rel="stylesheet" type="text/css" href="{{ asset('js/app/settings/dist/release/index.css') }}">
    {% else %}
        <link rel="stylesheet" type="text/css" href="{{ asset('js/app/settings/dist/debug/index.css') }}">
    {% endif %}

    <body class="social-registration"> 
        
         <header class="ZEEGA-HEAD">
            <ul class="head-nav nav-left">
                <li class="tab">
                    <a href="http:{{hostname}}{{directory}}" class="ZEEGA-tab">
                        <span class="ZTab-logo"></span>
                    </a>
                </li>
            </ul>
        </header>
        <div class="wrapper">

            <h1>Almost there!</h1>

            <div class="inner-wrapper">
            <form id="register-social" action="{{ path('fos_user_registration_extra',{id: id}) }}" method="POST" {{ form_enctype(form) }}>
                <div>
                    {{ form_label(form.username, 'Choose a username', { 'attr': {'class': 'required'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'required'}}) }}
                    <span class="help-block">Your new Zeega home: http://zeega.com/@<span class="username-preview"></span></span>
                </div>
                <div>
                    {{ form_label(form.email,'Email', { 'attr': {'class': 'required'}}) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'required'}}) }}
                </div>
                <input type="submit" class="submit" value="Do it!" />
            </form>

        </div>


        
       {% if app.environment == 'prod' %}
        <script src="{{ asset('js/app/settings/dist/release/require.js') }}" ></script>
        {% else %}
        <script src="{{ asset('js/app/settings/dist/debug/require.js') }}" ></script>
        {% endif %}
    </body>
</html>
